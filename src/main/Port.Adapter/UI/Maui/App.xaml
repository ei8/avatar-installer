<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="ei8.Avatar.Installer.Port.Adapter.UI.Maui.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ei8.Avatar.Installer.Port.Adapter.UI.Maui"
    xmlns:converters="clr-namespace:ei8.Avatar.Installer.Port.Adapter.UI.Maui.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Boolean to Color Converter for Tab Styling -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            
            <!-- Validation Converters -->
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:FirstValidationErrorConverter x:Key="FirstValidationErrorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
